# man systemd.unit
# man systemd.service

[Unit]
Description="HashiCorp Consul-Template"
Documentation=https://www.consul.io/
Requires=network-online.target
After=network-online.target
#ConditionFileNotEmpty=/etc/consul.d/consul.hcl

[Service]
User=consul
Group=consul
ExecStart=/usr/local/bin/consul-template -config-dir= -config=/etc/consul-template.d
ExecReload=/usr/local/bin/consul-template reload
KillMode=process
Restart=on-failure
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target